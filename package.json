{
  "name": "git-twitter-bot",
  "version": "2.0.0",
  "description": "Auto-tweet git commits with AI-generated changelogs - Multi-user commercial edition with rate limiting and queue management",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "setup": "npm install && npm run frontend:install",
    "build": "npm run frontend:build",
    "test:local": "node test-local.js",
    "test:webhook": "node test-webhook.js",
    "test:gemini": "node test-gemini.js",
    "index-repo": "node src/repoIndexer.js"
  },
  "dependencies": {
    "express": "^4.21.2",
    "twitter-api-sdk": "^1.2.1",
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.4.7",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "git",
    "twitter",
    "x",
    "changelog",
    "ai",
    "gemini",
    "webhook",
    "automation"
  ]
}

